# ============================================================
# Ejemplo de configuración para entorno local - Backend
# Copia este archivo como '.env' y completa los valores reales
# ============================================================

FLASK_ENV=development
FLASK_DEBUG=True

# Base de datos local o Neon
DATABASE_URL=postgresql://usuario:contraseña@host:puerto/base_de_datos?sslmode=require

# Claves de seguridad
SECRET_KEY=supersecretkey
JWT_SECRET_KEY=supersecretkey

# Configuración de envío de correos (SendGrid REST API)
SENDGRID_API_KEY=SG.tu_api_key_de_sendgrid_aqui
MAIL_DEFAULT_SENDER=tu_email_de_envio@tudominio.com
MAIL_TIMEOUT=10
MAIL_FALLBACK_ENABLED=True
