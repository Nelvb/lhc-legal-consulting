# ============================================================================
# EJEMPLO DE CONFIGURACI√ìN - ENTORNO LOCAL (.env)
# Copia este archivo como `.env` y completa los valores reales en desarrollo.
# ============================================================================
# Este archivo define todas las variables necesarias para ejecutar el backend
# y los servicios asociados (BD, Cloudinary, SendGrid, administrador inicial).
# ============================================================================

# ------------------------------------------------------------
# üîß Configuraci√≥n general de Flask
# ------------------------------------------------------------
FLASK_ENV=development
FLASK_DEBUG=True

SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Expiraci√≥n de tokens JWT (en segundos)
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# ------------------------------------------------------------
# üóÑÔ∏è Base de datos PostgreSQL (local o Neon)
# ------------------------------------------------------------
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_NAME=your_database_name
# O usa DATABASE_URL si prefieres conexi√≥n directa:
# DATABASE_URL=postgresql://user:password@host:port/dbname?sslmode=require

# ------------------------------------------------------------
# ‚òÅÔ∏è Cloudinary (requerido para subida de im√°genes)
# ------------------------------------------------------------
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ------------------------------------------------------------
# üìß Configuraci√≥n de env√≠o de correos
# ------------------------------------------------------------
# Opci√≥n 1: SendGrid (recomendada - API REST)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
MAIL_DEFAULT_SENDER=your_email_sender@yourdomain.com
MAIL_TIMEOUT=10
MAIL_FALLBACK_ENABLED=True

# Opci√≥n 2: Gmail (solo como respaldo o desarrollo)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_MAX_EMAILS_PER_DAY=100

# ------------------------------------------------------------
# üë§ Administrador inicial (usado en manage.py)
# ------------------------------------------------------------
ADMIN_USERNAME=Administrador
ADMIN_LAST_NAME=LHC
ADMIN_EMAIL=your_admin_email@example.com
ADMIN_PASSWORD=your_secure_admin_password

# ------------------------------------------------------------
# üåê Frontend URL (para enlaces de reset password, CORS, etc.)
# ------------------------------------------------------------
FRONTEND_URL=https://lhc-legal-consulting.vercel.app
