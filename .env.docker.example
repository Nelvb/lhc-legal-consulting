# ============================================================================
# EJEMPLO de configuración para entorno con Docker (.env.docker)
# Copia este archivo como `.env.docker` y actualiza los valores reales.
# ============================================================================

FLASK_ENV=development
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Expiración de tokens JWT (en segundos)
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# Configuración de base de datos PostgreSQL para entorno Docker
DB_USER=postgres
DB_PASSWORD=your_docker_db_password
DB_HOST=db
DB_NAME=your_docker_db_name

# Configuración de Cloudinary (subida de imágenes)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Configuración de email para Flask-Mail
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=your_email@gmail.com
MAIL_MAX_EMAILS_PER_DAY=100

# Datos del usuario administrador por defecto (usado en manage.py)
ADMIN_USERNAME=Administrador
ADMIN_LAST_NAME=LHC
ADMIN_EMAIL=your_admin_email@example.com
ADMIN_PASSWORD=your_secure_admin_password
